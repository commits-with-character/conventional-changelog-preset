{
  "name": "@commits-with-character/conventional-changelog-preset",
  "version": "1.0.0",
  "description": "commits-with-character.org preset for conventional-changelog.",
  "keywords": [
    "conventional-changelog",
    "commits-with-character.org",
    "preset"
  ],
  "homepage": "https://commits-with-character.org",
  "bugs": {
    "url": "https://github.com/commits-with-character/conventional-changelog-preset/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commits-with-character/conventional-changelog-preset.git"
  },
  "license": "ISC",
  "author": "Will Stone",
  "type": "commonjs",
  "main": "./src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "release": "release-it",
    "test": "vitest"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no lint-staged"
  },
  "lint-staged": {
    "*.{css,json,md,js,cjs,mjs}": [
      "prettier --write"
    ],
    "*.{js,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@commitlint/lint": "^19.5.0",
    "@release-it/conventional-changelog": "^9.0.0",
    "@will-stone/eslint-config": "^12.0.0",
    "@will-stone/prettier-config": "^8.0.1",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-core": "^8.0.0",
    "conventional-recommended-bump": "^10.0.0",
    "eslint": "^9.12.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "simple-git-hooks": "^2.11.1",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "eslint": "^9.12.0"
  }
}
